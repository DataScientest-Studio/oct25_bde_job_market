# Adzuna API Credentials
# Get your credentials at: https://developer.adzuna.com/
ADZUNA_APP_ID=your_adzuna_app_id_here
ADZUNA_APP_KEY=your_adzuna_app_key_here

# PostgreSQL Database Configuration
# These values are used by src/db/db_config.py via get_database_url().
# DB_HOST:
#   - localhost  -> use local Postgres on your machine/VM
#   - <hostname> -> use a shared Postgres on the VM or a docker service name (e.g. "postgres")
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jobs_db
DB_USER=postgres
DB_PASSWORD=your_password

# MongoDB Configuration (Optional)
# Only needed if you actually use Mongo for unstructured data.
# For a shared Mongo on the VM, replace "localhost" with the VM hostname or docker service name.
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=jobs_db

# Application Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=False
